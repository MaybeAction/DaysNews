<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left"

    >


    <RelativeLayout
        android:id="@+id/rl_unlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="立刻登陆"
            android:textColor="#ffffffff"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="150dip"

        android:orientation="vertical" >

        <TextView

            android:id="@+id/tv_update_version"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="更新版本"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="30px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10dip"
            android:background="@mipmap/share_little_bg"
            android:orientation="horizontal" >
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="200dp"
                android:layout_height="50dp"
                >
                <TextView
                    android:id="@+id/tv_oneKeyShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="一键分享"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                >
            <ImageView
                android:id="@+id/iv_share_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15.0dip"
                android:background="@mipmap/fun_share_weixin" />

            <ImageView
                android:id="@+id/iv_share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:background="@mipmap/addimport_qq" />

            <ImageView
                android:id="@+id/iv_share_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:background="@mipmap/fun_share_friends" />

            <ImageView
                android:id="@+id/iv_share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@mipmap/fun_share_weibo" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_logined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="喵喵喵"
            android:textColor="#ffffffff"
            android:textSize="25sp" />
    </RelativeLayout>
</RelativeLayout>
