<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_slidingmenu_left"
    android:layout_height="match_parent"
    tools:context="uianimationdemo.com.example.daysnews.fragment.RightFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/entry"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:text="立刻登陆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/tv_rightfragment_entry" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:background="@mipmap/share_little_bg"
        android:id="@+id/ll_right"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="148dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp">
        <ImageView
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/fun_share_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/entry_qq"
            android:layout_gravity="center"
            android:src="@mipmap/addimport_qq"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_weight="1"
            android:src="@mipmap/fun_share_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:src="@mipmap/fun_share_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="更新版本"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rightfragment_update"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/ll_right"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
