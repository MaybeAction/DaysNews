<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_forget_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <include layout="@layout/item_title"></include>
    <EditText
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_comment"
        android:hint=" 请输入用户名"
        android:id="@+id/et_forget_rewrite"
        android:layout_width="match_parent"
        android:layout_height="50dp" />



    <Button
        android:layout_gravity="center"
        android:id="@+id/bt_resetting_password"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="确认"
        android:background="@drawable/selector_entry_button"
        android:layout_width="100dp"
        android:layout_height="50dp" />
</LinearLayout>
